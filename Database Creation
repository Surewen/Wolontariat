CREATE TABLE users(
  id INTEGER PRIMARY KEY, 
  pesel integer, 
  email VARCHAR(30),
  name VARCHAR(20),
  surname VARCHAR(20),
  birth_date DATE,
  sex VARCHAR(10),
  type VARCHAR(20)
);

CREATE TABLE newsletter(
  id INTEGER PRIMARY KEY,
  to_email VARCHAR(20),
  from_email VARCHAR(20),
  title VARCHAR(40),
  message VARCHAR(250),
  post_date DATETIME
);

CREATE TABLE announcement(
  id INTEGER PRIMARY KEY,
  post_date DATETIME,
  created_by VARCHAR(20),
  current_status VARCHAR(10),
  content VARCHAR(1000)
);
